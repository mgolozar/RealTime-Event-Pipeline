# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=user-events
KAFKA_CONSUMER_GROUP=data-pipeline-consumer

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=data_pipeline
DB_USER=pipeline_user
DB_PASSWORD=pipeline_password

# Monitoring Configuration
METRICS_PORT_PRODUCER=8001
METRICS_PORT_CONSUMER=8002
PROMETHEUS_URL=http://localhost:9090

# Producer Configuration
PRODUCER_MIN_INTERVAL=0.1
PRODUCER_MAX_INTERVAL=5.0
PRODUCER_USER_COUNT=1000

# Consumer Configuration
CONSUMER_BATCH_SIZE=100
AGGREGATOR_FLUSH_INTERVAL_MINUTES=5
FLUSH_INTERVAL_SECONDS=60

# Features
SAVE_RAW_EVENTS=true
SAVE_PIPELINE_METRICS=true

# Alert Thresholds
ALERT_ERROR_RATE_THRESHOLD=0.05
ALERT_CONSUMER_LAG_THRESHOLD=1000
ALERT_PROCESSING_LATENCY_THRESHOLD=5.0

